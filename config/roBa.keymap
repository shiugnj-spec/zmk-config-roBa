/ {
    combos {
        compatible = "zmk,combos";

        tab {
            bindings = <&kp TAB>;
            key-positions = <11 12>;
        };

        double_quotation {
            bindings = <&kp DOUBLE_QUOTES>;
            key-positions = <20 21>;
        };

        Escape {
            bindings = <&kp ESCAPE>;
            key-positions = <1 0>;
        };

        half {
            bindings = <&kp LANG2>;
            key-positions = <13 12>;
        };

        kana {
            bindings = <&kp LANG1>;
            key-positions = <18 19>;
        };

        f7 {
            bindings = <&kp F7>;
            key-positions = <22 23>;
        };

        eauqls {
            bindings = <&kp EQUAL>;
            key-positions = <33 32>;
        };

        scroll {
            bindings = <&mo 5>;
            key-positions = <19 20>;
        };

        at_sign {
            bindings = <&kp AT_SIGN>;
            key-positions = <31 32>;
        };
    };

    macros {
        to_layer_0: to_layer_0 {
            compatible = "zmk,behavior-macro-one-param";
            #binding-cells = <1>;
            bindings = <&to 0 &macro_param_1to1 &kp MACRO_PLACEHOLDER>;
            label = "TO_LAYER_0";
        };

        dummy: dummy {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp D &kp A &kp M &kp I &kp MINUS &kp SPACE>;
            label = "DUMMY";
        };

        tilde: tilde {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp T &kp I &kp R &kp U &kp D &kp A &kp SPACE>;
            label = "TILDE";
        };
    };

    behaviors {
        lt_to_layer_0: lt_to_layer_0 {
            compatible = "zmk,behavior-hold-tap";
            label = "LAYER_TAP_TO_0";
            bindings = <&mo>, <&to_layer_0>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
            flavor = "tap-preferred";
        };

        encoder_msc_down_up: encoder_msc_down_up {
            compatible = "zmk,behavior-sensor-rotate";
            label = "ENCODER_MSC_DOWN_UP";
            #sensor-binding-cells = <0>;
            bindings = <&msc SCRL_DOWN>, <&msc SCRL_UP>;

            tap-ms = <20>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
&kp Q             &kp W         &kp E             &kp R                &kp T                                                    &kp Y        &kp U  &kp I  &kp O    &kp P
&mt LCTRL A       &kp S         &kp D             &kp F                &kp G        &kp F12                      &kp F10        &kp H        &kp J  &kp K  &kp L    &lt_to_layer_0 7 MINUS
&mt LEFT_SHIFT Z  &kp X         &kp C             &kp V                &kp B        &kp F9                       &kp F11        &kp COMMA    &kp N  &kp M  &kp DOT  &mt RIGHT_SHIFT SLASH
&kp DELETE        &kp LEFT_ALT  &kp LEFT_COMMAND  &lt_to_layer_0 1 F7  &lt 2 SPACE  &lt_to_layer_0 3 ESCAPE      &kp BACKSPACE  &lt 6 ENTER                         &lt_to_layer_0 8 COLON
            >;

            sensor-bindings = <&encoder_msc_down_up>;
        };

        LEFT1 {
            bindings = <
&kp NUMBER_1      &kp NUMBER_2      &kp NUMBER_3      &kp NUMBER_4      &kp NUMBER_5                          &kp NUMBER_6      &kp NUMBER_7      &kp NUMBER_8  &kp NUMBER_9  &kp NUMBER_0
&kp LS(NUMBER_1)  &kp LS(NUMBER_2)  &kp LS(NUMBER_3)  &kp LS(NUMBER_4)  &kp LS(NUMBER_5)  &trans      &trans  &kp LS(NUMBER_6)  &kp LS(NUMBER_7)  &trans        &trans        &kp TILDE
&kp KP_PLUS       &kp KP_MINUS      &kp KP_MULTIPLY   &kp KP_DIVIDE     &kp KP_EQUAL      &trans      &trans  &trans            &trans            &trans        &trans        &trans
&trans            &trans            &trans            &trans            &trans            &trans      &trans  &trans                                                          &trans
            >;

            sensor-bindings = <&inc_dec_kp K_VOLUME_UP C_VOLUME_DOWN>;
        };

        LEFT2 {
            bindings = <
&kp F1  &kp F2   &kp F3   &kp F4   &kp LS(NUMBER_9)                          &kp LS(NUMBER_0)       &trans  &trans  &trans  &trans
&kp F5  &kp F6   &kp F7   &kp F8   &kp LEFT_BRACKET      &trans      &trans  &kp RIGHT_BRACKET      &trans  &trans  &trans  &trans
&kp F9  &kp F10  &kp F11  &kp F12  &kp LS(LEFT_BRACKET)  &trans      &trans  &kp LS(RIGHT_BRACKET)  &trans  &trans  &trans  &trans
&trans  &trans   &trans   &trans   &trans                &trans      &trans  &trans                                         &trans
